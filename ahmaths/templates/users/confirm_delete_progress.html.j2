{% extends "layout.html.j2" %}
{% block content %}
  <div class="row mb-2">
    <div class="col-xs-2"><a href="{{ url_for('users.account') }}" class="btn btn-primary btn-lg">&larr; Back</a></div>
    <div class="col-xs-8 text-center">
      {% if topic_id == 'all' %}
        <h1>Delete All Progress</h1>
      {% else %}
        <h1>Delete Progress for {{ topic_name }}</h1>
      {% endif %}
    </div>
    <div class="col-xs-2"></div>
  </div>
  <div class="content-section">
    {% if topic_id == 'all' %}
      <p>Are you sure you would like to delete <b>all</b> your progress?</p>
    {% else %}
      <p>Are you sure you would like to delete all your progress for <b>{{ topic_name }}</b>? This action cannot be undone.</p>
    {% endif %}
    <a href="{{ url_for('users.delete_progress', topic_id=topic_id) }}" class="btn btn-outline-danger">Yes, delete my progress</a> <a href="{{ url_for('users.account') }}" class="btn btn-outline-info">No, go back</a>
  </div>
{% endblock content %}
